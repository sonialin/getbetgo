<div class="page-top-offset">
</div>

<div class="container" id="order-details">
  <div class="col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
    <div class="panel panel-default">

    	<div class="panel-heading">
    		Order #<%= @order.token_with_prefix %>
    	</div>

    	<div class="panel-body">
      	<div class="row">
	        <div class="col-xs-6 col-sm-6 col-md-6">
	          <address>
	            <strong>FundWok Inc.</strong>
	            <br>
	            	340 S LEMON AVE #3668
	            <br>
	            	WALNUT, CA 91789
	            <br>
	            Email: info@fundwok.com
	          </address>
	        </div>
	        <div class="col-xs-6 col-sm-6 col-md-6 text-right">
	          <p>
	            <em><%= @order.created_at %></em>
	          </p>
	        </div>
	      </div>
	      
	      <div class="text-center">
	        <h1>Order Details</h1>
	      </div>
	      <table class="table">
	        <thead>
	          <tr>
	            <th>Fund</th>
	            <th>Quantity</th>
	            <th class="text-center">Total</th>
	          </tr>
	        </thead>
	        <tbody>
	          <tr>
	            <td class="col-md-6"><em><%= link_to @order.post.title, @order.post %></em></td>
	            <td class="col-md-1" style="text-align: center"> 1 </td>
	            <td class="col-md-2 text-center">$<%= number_with_precision(@order.post.price, :precision => 2) %></td>
	          </tr>
	          <% if @discount != 0 %>
	            <tr class="fw-main-color discount-row">
	              <td colspan=2 class="text-right"><strong>( Discount:</strong></td>
	              <td class="text-center">
	              	<strong>$<%= number_with_precision(@discount, :precision => 2) %> )</strong>
		            </td>
	            </tr>
	          <% end %>
	          <tr>
	            <td colspan=2 class="text-right">
	              <p>
	                <strong>Subtotal: </strong>
	              </p>
	              
	          	</td>
	            <td class="text-center">
	              <p>
	                <strong>$<%= number_with_precision(@payment_amount, :precision => 2) %></strong>
	              </p>
	              
	            </td>
	          </tr>
	          <tr class='handling-fee-row'>
	            <td colspan=2 class="text-right">
	              
	              <p>
	                <strong>Handling Fee: </strong>
	              </p>
	          	</td>
	            <td class="text-center">
	              
	              <p>
	                <strong>$<%= number_with_precision(@handling_fee, :precision => 2) %></strong>
	              </p>
	            </td>
	          </tr>
	          <tr>
	            <td>
	            	<% if @total_payment_w_discount != 0 %>
	            		<i class="fa fa-cc-paypal" style="font-size: 2.2em; color: #999; margin-top: 4px;"></i>
	            	<% end %>
	            </td>
	            <td class="text-right"><h4><strong>Total: </strong></h4></td>
	            <td class="text-center text-danger"><h4><strong>$<%= number_with_precision(@total_payment_w_discount, :precision => 2) %></strong></h4></td>
	          </tr>
	        </tbody>
	      </table>
      </div><!-- panel-body -->

    </div><!-- end panel -->
    <%= link_to 'Back', :back %>
  </div>
</div><!-- end container -->