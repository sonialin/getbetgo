<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="show-funding-metrics">  
  <div class="show-funding-metrics-item col-lg-12 col-md-12 col-sm-12 col-xs-4 text-center">
    
      <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12 show-funding-metrics-icon text-center">
        <span class="circle-icon"><i class="fa fa-users icon-font"></i></span>
      </div>
      <div class="clearfix visible-xs"></div>
      <div class="col-lg-9 col-md-9 col-sm-10 col-xs-12">
        <div class="row show-funding-metrics-content">
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-number">
            <%= @post.beneficiaries %>
          </div>
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-text">
            Beneficiaries
          </div>
        </div>
      </div>
    
  </div>
  
  <div class="show-funding-metrics-item col-lg-12 col-md-12 col-sm-12 col-xs-4 text-center">
    
      <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12 show-funding-metrics-icon">
        <span class="circle-icon"><i class="fa fa-usd icon-font"></i></span>
      </div>
      <div class="clearfix visible-xs"></div>
      <div class="col-lg-9 col-md-9 col-sm-10 col-xs-12">
        <div class="row show-funding-metrics-content">
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-number">
            $<%= @post.claimed_fund %>
          </div>
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-text">
            of $<%= @post.total %> claimed
          </div>
        </div>
      </div>
    
  </div>
  <div class="show-funding-metrics-item col-lg-12 col-md-12 col-sm-12 col-xs-4 text-center">
    
      <div class="col-lg-3 col-md-3 col-sm-2 col-xs-12 show-funding-metrics-icon">
        <span class="circle-icon"><i class="fa fa-clock-o icon-font"></i></span>
      </div>
      <div class="clearfix visible-xs"></div>
      <div class="col-lg-9 col-md-9 col-sm-10 col-xs-12">
        <div class="row show-funding-metrics-content">
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-number">
            <%= @post.quantity - @post.beneficiaries %>
          </div>
          <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 show-funding-metrics-text">
            Spots left
          </div>
        </div>
      </div>
    
  </div>
</div>