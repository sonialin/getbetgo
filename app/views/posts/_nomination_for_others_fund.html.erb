<div class="alert alert-info fund-application-prompt fund-application-action-needed" style=" margin-top: 10px;">
  <div class="row">
    <div class="col-md-12">
      Know someone perfect for this fund? 
      <span id="nominate-button" class="btn btn-primary pull-right">Nominate!</span>
      <div id="nominate-panel">
        <a href="http://www.facebook.com/sharer.php?u=<%= request.original_url %>" target="_blank"><%= image_tag "social/icon_header_face.png" %></a>
        <a href="https://plus.google.com/share?url=<%= request.original_url %>" target="_blank"><%= image_tag "social/icon_header_g.png" %></a>
        <a href="http://twitter.com/share?url=<%= request.original_url %>&text=<%= @post.title %> on FundWok." target="_blank"><%= image_tag "social/icon_header_tw.png" %></a>
        <a href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());"><%= image_tag "social/icon_header_p.png" %></a>
      </div>
    </div>
    <div class="col-md-12">
      <%= form_for @nomination, :html => { :class => 'form-group', :id => "nomination-email-form" } do |f| %>
        <div class="col-lg-12 col-md-12 nomination-form-col">
          <%= f.hidden_field :post_id, value: @post.id %>
          <%= f.text_field :email, :class => 'form-control', :placeholder => "Nominee's Email" %>
        </div>
        <div class="col-lg-12 col-md-12 nomination-form-col">
          <%= f.text_field :body, :class => 'form-control', :placeholder => "Message for Nominee" %>
        </div>
        <div class="col-lg-6 col-md-6 nomination-form-col">
          <% if current_user %>
            <span class="nominated-by">by <%= current_user.name %></span>
          <% else %>
            <%= f.text_field :sender_name, :class => 'form-control', :placeholder => "Your Name" %>
          <% end %>
        </div>
        <div class="col-lg-6 col-md-6 nomination-form-col">
          <%= f.submit "Send", :class => "btn btn-default pull-right" %>
        </div>
      <% end %>
    </div>    
  </div>
</div>