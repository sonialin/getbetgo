                <% end %>
              </div><!-- end col-sm-3 -->
            </div><!-- end row -->
          </div><!-- end item active -->
          <div class="item">
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <% @recommended_posts.each do |post| %>
