        </div>
      </div>
    </div>
  </div>
<% end %>

<h1 class="decoration text-center proj"><span class="nobgr">Funds Available</span></h1>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <% if params[:tag] %>
        <div class="tag-display">
          <span class="search-text">Search results of tag:</span>
          <span class="search-tag">
            <%= link_to posts_path do %>
              <i class="fa fa-times dismiss-tag"></i>
            <% end %>&nbsp;
            <%= params[:tag] %>
          </span>
        </div>
      <% elsif params[:location] %>
        <div class="tag-display">
          <span class="search-text">Search results of location:</span>
          <span class="search-tag">
            <%= link_to posts_path do %>
              <i class="fa fa-times dismiss-tag"></i>
            <% end %>&nbsp;
            <%= params[:location] %>
          </span>
        </div>
      <% else %>
        <div class="portfolio-selection center-block">
          <div class="decoration text-center">
            <div class="nobgr">
              <div class="text-center">
                <div id="portfolio-filter" class="btn-group-lg">  
                  <span type="button" class="btn btn-default col-lg-2 current" id="all" value="All">All</span>
                  <span type="button" class="btn btn-default col-lg-2" id="Business" value="Business">Business</span>
                  <span type="button" class="btn btn-default col-lg-2" id="Education" value="Education">Education</span>
                  <span type="button" class="btn btn-default col-lg-2" id="Lifestyle" value="Lifestyle">Lifestyle</span>
                  <span type="button" class="btn btn-default col-lg-2" id="SocialImpact" value="Social Impact">Social Impact</span>
                  <span type="button" class="btn btn-default col-lg-2" id="Others" value="Others">Others</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= render 'postscontainer' , :user_posts => false, :url_to_get_posts => "/getposts" %>
  
    </div><!-- end coloum -->
  </div><!-- end row -->
</div><!-- container -->

<script>
  tag = "<%= @tag %>";

  $('#portfolio-filter .btn').click(function() {
    $('#portfolio-filter .btn').removeClass('current');
    $('#portfolio-filter .btn').removeClass('active');
    $(this).addClass('current');
    $(this).removeClass('active');
    $('#my-posts').html('');

    category = $(this).attr('id');

    page = 1;

    $.ajax({
      url: '/getposts',
      type: 'POST',
      data: "category="+category+"&page="+page+"&tag="+tag+"&type=1&offset=0",
      beforeSend: function(xhr, settings) {
        xhr.setRequestHeader('accept', '*/*;q=0.5, ' + settings.accepts.script);
      }
    });
  });

  $('#posts-container .user-info').popover({trigger: 'hover'});
</script>