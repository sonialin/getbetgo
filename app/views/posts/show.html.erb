<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12" id="title-section">
          <div class="title-content">
            <h1><%= @post.title %></h1>
            <h3><small>by <%= link_to @post.user.name, @post.user, :class => 'user_name_link' %>
            Â· <%= reformatted_post_datetime(@post.created_at) %></small></h3>
          </div>
          <div class="pull-left">
            <% if current_user && current_user == @post.user %>
              <%= link_to edit_post_path(@post), :class => "btn btn-default btn-filter" do %>
                <i class="fa fa-pencil"></i>&nbsp;Edit
              <% end %>  
            <% end %>
          </div>
          <div class="pull-right" id="title-info">
            <% if (@post.category != nil && @post.category != '') %>
              <%= link_to category_path(@post.category), :class =>"btn btn-default btn-filter" do %>
                <%= post_category_icon(@post.category) %>&nbsp;
                <%= @post.category %>
              <% end %>
            <% end %>
            <% if (@post.location != nil && @post.location != '') %>
              <%= link_to location_path(@post.location), :class =>"btn btn-default btn-filter" do %>
                <i class="fa fa-map-marker"></i>&nbsp;
                <%= @post.location %>
              <% end %>
            <% end %>
          </div>
          <hr class="post-content-divider clear">
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <%= render :partial => "posts/show_funding_stats" %>
        </div>
      </div>
      
      <hr class="show-funding-content-divider">

      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">  
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <%= image_tag @post.image.url(:big), :class => "img-responsive" %>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <%= render :partial => "posts/description_tabs" %>
          </div>   
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <%= render :partial => "posts/funder_profile" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
          <%= render :partial => "posts/social_panel" %>
          <%= render :partial => "posts/timeline" %>
        </div>
      </div> 

    </div><!-- end col-md-10 -->
  </div><!-- end row -->
</div><!-- end container -->