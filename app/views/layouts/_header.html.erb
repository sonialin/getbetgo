<nav class="navbar navbar-fixed-top navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Home", root_path, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= 'active' if current_page?(howitworks_path) %>"><%= link_to "HOW IT WORKS", howitworks_path %></li>
        <% if user_signed_in? %>        
      		<li class="<%= 'active' if current_page?(new_post_path) %>">
            <%= link_to 'NEW POST', new_post_path %>
          </li>
          <li class="<%= 'active' if controller.controller_name == 'notifications' %>">
            <%= link_to notifications_path do %>
              <i class="fa fa-envelope"></i>
              <% if current_user.mailbox.receipts.where(is_read: false).any? %>
                <span class="unread-count"><%= current_user.mailbox.receipts.where(is_read: false).count %></span>
              <% end %>
            <% end %>
          </li>
          <li class="<%= 'active' if controller.controller_name == 'users' %>">
            <%= link_to current_user do %>
              <i class="fa fa-user"></i>&nbsp;<%= current_user.name %>&nbsp;<span class="badge" style="background-color: #ed1c24;">$<%= current_user.wallet.amount %></span>
            <% end %>
          </li>
      		<li class="dropdown <%= 'active' if (current_page?(giving_path) or current_page?(edit_user_registration_path)) or (current_page?(receiving_path)) %>">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="personal-switch">
              <i class="fa fa-folder" id="personal-close"></i>
              <i class="fa fa-folder-open" id="personal-open"></i>
              <span>PERSONAL</span>
            </a>
		        <ul class="dropdown-menu">
              <li>
                <%= link_to giving_path do %>
                  <i class="fa fa-credit-card"></i>&nbsp;FINANCES
                <% end %>
              </li>
		          <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cog"></i>&nbsp;ACCOUNT SETTINGS
                <% end %>
              </li>
	            <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>&nbsp;LOGOUT
                <% end %>
              </li>
	        	</ul>
    			</li>
  			<% else %>
        	<li><%= link_to "<i class='fa fa-user'></i>&nbsp;SIGN IN".html_safe, "#myModal", :data => {:toggle=>"modal"} %></li>  		
  			<% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>

<script>
  $('#personal-open').hide();
  $('#personal-close').show();
  $( "#personal-switch" ).focus(function(){
    $('#personal-open').show();
    $('#personal-close').hide();
  });
  $( "#personal-switch" ).blur(function(){
    $('#personal-open').hide();
    $('#personal-close').show();
  });
</script> 