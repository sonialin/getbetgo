<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well well-sm">
        <fieldset>
          <legend class="text-center">Forgot your password?</legend>

					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  				<%= devise_error_messages! %>
						<div class="form-group">
          		<label class="col-md-3 control-label" for="email">Email</label>
          		<div class="col-md-8">
          			<%= f.email_field :email, :class => "form-control form-group" %>
          		</div>
        		</div>
			  
					  <div class="form-group">
	            <div class="col-md-6 col-sm-12">
	              <%= render :partial => "devise/shared/links" %>
	            </div>
	            <div class="col-md-6 col-sm-12p pull-right">
	              <%= f.submit "Send me reset password instructions", :class => "btn btn-fw btn-lg" %>      
	            </div>
	          </div>

					<% end %>			
 				</fieldset>
      </div>
    </div>
  </div>
</div>