<div class="container">
  <h2>Sign up</h2>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well well-sm">
        <fieldset>
          <legend class="text-center">Create a New User</legend>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => 'signup_form' }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <label class="col-md-3 control-label" for="email">Email</label>
            <div class="col-md-8">
              <%= f.email_field :email, :class => "form-control form-group" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="name">Name</label>
            <div class="col-md-8">
              <%= f.text_field :name, :class => "form-control form-group"  %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="password">Password</label>
            <div class="col-md-8">
              <%= f.text_field :password, :class => "form-control form-group"  %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label" for="password_confirmation">Password Confirmation</label>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, :class => "form-control form-group"  %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-3">
              <%= render :partial => "devise/shared/links" %>
            </div>
            <div class="col-md-8 text-right">
              <%= f.submit "Submit", :class => "btn btn-success btn-lg" %>      
            </div>
          </div>
        <% end %>

        </fieldset>
      </div>
    </div>
  </div>
</div>