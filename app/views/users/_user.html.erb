<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 hero-feature listing-big text-center">
  <div class="thumbnail">
    <div class="thumbnail-cover" id="user-thumbnail" style="background-image: url(<%= user.user_info.cover_photo(:medium) %>);">
      <div class="row">
        <%= link_to user do %>
        <div id="follow-user-clickable-block">
        </div>
        <% end %>
        <div class="follow-user-thumbnail-block">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="follow-user-thumbnail">
              <% if user.user_info.avatar? %>
                <%= link_to image_tag(user.user_info.avatar.url(:medium), size: "80x80", :class => "img-circle author-thumbnail"), user, :class => "media-object" %>
              <% else %>
                <%= link_to image_tag("http://placehold.it/80x80", size: "80x80", :class => "img-circle author-thumbnail"), user, :class => "media-object" %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <div class="follow-user-info">
              <div class="pull-left">
                <%= link_to user.name, user, :class => "author text-center" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>                
    <div class="follow-brief-desc">
      <p class="media-heading brief-desc-text">
        <% if user.user_info.biography != nil && user.user_info.biography != '' %>
          <%= link_to raw(user.user_info.biography.truncate(105)), user %>
        <% end %>
      </p>
      <div class="clear"></div>
    </div>
        
    <div class="modal-footer">
      <div class="row funding-metrics text-center follow-metrics">
        <div class="col-lg-3 col-md-4 col-xs-4 follow-metrics-cell">
          <span class="follow-number fw-main-color"><%= user.followers.count %></span><br/>
          <small class="funding-metrics-text">FOLLOWERS</small>
        </div>
        <div class="col-lg-3 col-md-3 col-xs-3 follow-metrics-cell">
          <span class="follow-number fw-main-color"><%= user.posts.count %></span><br/>
          <small class="funding-metrics-text">FUNDS</small>
        </div>
        <div class="col-lg-6 col-md-5 col-xs-5 follow-metrics-button">
          <% if current_user && user != current_user %>
  				  <% if current_user.following? user %>
              <div class="pull-right">
    				  	<%= form_for current_user.followed_relationships.find_by(followed_id: user.id),
                 html: { method: :delete } do |f| %>
      						<%= f.submit "Unfollow", :class => "btn btn-large pull-right unfollow-user" %>
    						<% end %>
              </div>
  				  <% else %>
              <div class="pull-right">
    				  	<%= form_for(current_user.followed_relationships.build(followed_id: user.id)) do |f| %>
    				  		<%= f.hidden_field :followed_id %>
    						  <%= f.submit "Follow", class: "btn btn-danger pull-right" %>
    						<% end %>
              </div>
  				  <% end %>
  				<% elsif !current_user %>
            <div class="pull-right">
    			    <%= link_to "#myModal", :data => {:toggle=>"modal"}, :class => "btn btn-danger" do %>
    			      <div class="text-center">
    			        Sign in</small>
    			      </div>
    			    <% end %>
            </div>
  				<% end %>
        </div>
      </div>
    </div>
  </div><!-- end thumbnail -->
</div><!-- end column -->