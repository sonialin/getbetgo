<div class="jumbotron" id="user-cover">
  <div class="container">
  	<div class="col-md-8 col-md-offset-2">
    
    	<div class="row well text-center" id="user-profile-main"> 
        <div class="col-lg-3">
        	<% if @user.avatar %>
						<%= image_tag @user.avatar.url(:medium), :class => 'img-circle', :width => "150px" %>
					<% end %>
        </div>
        <div class="col-lg-9">
        	<div class="row">
        		<div class="col-md-6">
        			<h2 class="pull-left"><%= @user.name %></h2>
        		</div>
        		<div class="col-md-6">
	        		<p>Location: <%= best_in_place_if @user == current_user, @user.user_info, :location, :type => :input, :activator => '#edit-location' %><% if @user == current_user %><%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-location' %><% end %></p>		
        		</div>
        	</div>
        	<div class="row">
        		<div class="user-edit-block">				
							<p>About Me: <%= best_in_place_if @user == current_user, @user.user_info, :biography, :type => :input, :activator => '#edit-biography' %><% if @user == current_user %><%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-biography' %><% end %></p>
							<p>LinkedIn: <%= best_in_place_if @user == current_user, @user.user_info, :linkedin, :type => :input, :activator => '#edit-linkedin' %><% if @user == current_user %><%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-linkedin' %><% end %></p>
							<p>Twitter: <%= best_in_place_if @user == current_user, @user.user_info, :twitter, :type => :input, :activator => '#edit-twitter' %><% if @user == current_user %><%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-twitter' %><% end %></p>
							<p>Github: <%= best_in_place_if @user == current_user, @user.user_info, :github, :type => :input, :activator => '#edit-github' %><% if @user == current_user %><%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-github' %><% end %></p>
						</div>
        		
        	</div>
        </div>
      </div>
    
  	</div>
  </div>
</div>

<div class="container">
	<h1 class="decoration text-center proj"><span class="nobgr"><%= @user.name %>'s Funds</span></h1>

	<div class="container">
	  <div class="row">
	    <div class="col-md-10 col-md-offset-1">

	      <%= render '/posts/postscontainer' , :user_posts => true, :url_to_get_posts => "/getuserposts", :user_id => @user.id %>
	  
	    </div><!-- end coloum -->
	  </div><!-- end row -->
	</div><!-- container -->
</div>