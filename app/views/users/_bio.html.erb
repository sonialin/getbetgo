<div class="row">
	<div id="user-profile-bio" class="text-center">
		<div class="col-lg-12 col-md-12 col-sm-12 text-center">
			<div class="user-edit-block">				
				<div>
					<% if current_user && @user == current_user %>
						About me: <%= link_to "&nbsp;<i class='fa fa-pencil editable'></i>&nbsp;Edit".html_safe, "#", :id => 'edit-biography', :class => 'fw-main-color' %><br /> 
					<% end %>
					<div id="user-profile-bio-content">
						<em id="user-info-biography-em" data-bip-original-content="<%= @user.user_info.biography %>">
							<%= best_in_place_if (current_user && @user == current_user), @user.user_info, :biography, :type => :input, :activator => '#edit-biography', :type => :textarea, :id => "user-info-biography", :html_attrs => { :cols => '65%', :rows => '4' } %>
						</em>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>