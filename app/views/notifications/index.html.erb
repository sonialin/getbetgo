<div class="container" id="notifications">
  <div class="row">
	  <div class="col-md-10 col-md-offset-1">

	    <!-- Nav tabs -->
	    <ul class="nav nav-tabs">
	      <li class="active">
	      	<a href="#inbox" data-toggle="tab">
	      		<span class="glyphicon glyphicon-inbox"></span>&nbsp;System
	      	</a>
	      </li>
	    </ul>
	    <!-- Tab panes -->
	    <div class="tab-content">
	      <div class="tab-pane fade in active">
	        <div class="list-group">
	        	<% @notification_receipts.each do |receipt| %>
		        	<div class="list-group-item<% if receipt.is_read %><%= " read" %><% end %>">
		        		<div class="row">
			        		<%= link_to mark_read_notification_path(receipt), :method => "post" do %>
			        			<div class="col-md-3 notification-cell-name">
				            	<span class="name">fundwok</span>
				          	</div>
				          	<div class="col-md-6 notification-cell-content">
				            	<span><%= receipt.notification.subject %></span>
				            </div>
				            <div class="col-md-3 notification-cell-date">
				            	<span class="badge pull-right"><%= reformatted_post_datetime(receipt.created_at) %></span>
				          	</div>
			            <% end %>
		          	</div>
		          </div>
	          <% end %>
		    	</div>
		  	</div>
		  	<%= will_paginate @notification_receipts, renderer: BootstrapPagination::Rails %>
		  </div><!-- end tab-content -->
	  </div><!-- end col-md-10 -->        
  </div><!-- end row -->
</div><!-- end container -->