<div class="row">
	<div class="col-lg-8">

	  <!-- the actual blog post: title/author/date/content -->
	  <h1><%= @bet.post.title %></h1>

	  <hr>

	  <!-- the comment box -->
	  <div class="well">
	    <h4>Bet details:</h4>
	    <form role="form" action="/posts/<%= params[:post_id] %>/bets/<%= params[:id] %>/receive_process">
	      <div class="form-group">
	        
	        Quantity: <%= @bet.post.price%><br />
	        Bet content: <%= @bet.body %> <br />
	        --------------------------<br />
	        
	      </div>
	      <div class="form-group">
	        <input type="radio" name="gateway" value="paypal">Paypal:
	        <% if @bet.user.paypal_recipient_accounts.any? %>
	        	<%= @bet.user.paypal_recipient_accounts.first.email %>
	        <% else %>
	        	No account added. 
	        	<%= link_to 'Add account', @bet.user %>
	        <% end %>
	        <br />
          <input type="radio" name="gateway" value="bitcoin">Bitcoin
	      </div>
	      <p>
	      <% if @bet.user.paypal_recipient_accounts.any? %>
	      	<button type="submit" class="btn btn-primary pull-right" role="button">Continue</button>
	      <% else %>
	      	<button type="submit" class="btn btn-primary pull-right disabled" role="button">Continue</button>
	      <% end %>
	      <%= link_to "Back", @bet.post, :class => 'btn btn-default pull-right', :role => 'button' %>
	    	</p>
	    	<br />
	    </form>
	  </div>
	  
	  <hr>


	</div>

	<div class="col-lg-4">
	  <div class="well">
	    <h4>Blog Search</h4>
	    <div class="input-group">
	      <input type="text" class="form-control">
	      <span class="input-group-btn">
	        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
	      </span>
	    </div><!-- /input-group -->
	  </div><!-- /well -->
	  <div class="well">
	    <h4>Popular Blog Categories</h4>
	      <div class="row">
	        <div class="col-lg-6">
	          <ul class="list-unstyled">
	            <li><a href="#dinosaurs">Dinosaurs</a></li>
	            <li><a href="#spaceships">Spaceships</a></li>
	            <li><a href="#fried-foods">Fried Foods</a></li>
	            <li><a href="#wild-animals">Wild Animals</a></li>
	          </ul>
	        </div>
	        <div class="col-lg-6">
	          <ul class="list-unstyled">
	            <li><a href="#alien-abductions">Alien Abductions</a></li>
	            <li><a href="#business-casual">Business Casual</a></li>
	            <li><a href="#robots">Robots</a></li>
	            <li><a href="#fireworks">Fireworks</a></li>
	          </ul>
	        </div>
	      </div>
	  </div><!-- /well -->
	</div>
</div>